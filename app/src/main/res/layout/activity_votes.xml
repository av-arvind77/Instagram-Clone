<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/llVotes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VotesActivity">
    <include
        android:id="@+id/toolbarVotes"
        layout="@layout/customtoolbar" />

    <LinearLayout
        android:id="@+id/llCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvCountry1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:textSize="@dimen/_14ssp"/>
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvVotes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Votes"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp"/>
            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:visibility="visible"
                android:background="@color/black"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvCountry2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pakistan"
                android:textColor="@color/grey"
                android:textSize="@dimen/_14ssp"/>
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvVotes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Votes"
                android:textColor="@color/grey"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp"/>
            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:visibility="gone"
                android:background="@color/black"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvCountry3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="England"
                android:textColor="@color/grey"

                android:textSize="@dimen/_14ssp"/>
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvVotes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Votes"
                android:textColor="@color/grey"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp"/>
            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:visibility="gone"
                android:background="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvCountry4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:textColor="@color/grey"
                android:textSize="@dimen/_14ssp"/>
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvVotes4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Votes"
                android:textColor="@color/grey"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp"/>
            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:visibility="gone"
                android:background="@color/black"/>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpVotes"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
</layout>