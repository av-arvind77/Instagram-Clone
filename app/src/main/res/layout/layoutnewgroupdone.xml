<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">


        <ImageView
            android:id="@+id/ivGroupUserImage"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:src="@mipmap/profile_icon3"
      />
        <com.yellowseed.customView.CustomRobotoBoldTextView
            android:id="@+id/tvUserImage"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_circle_blue"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_20ssp"
            android:visibility="gone" />

        <com.yellowseed.customView.CustomRobotoRegularTextView2
            android:id="@+id/tvGroupUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:text="Jhon Thomas"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnGroupUserRemove"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:background="@drawable/bg_yellow_soft_corner"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"

            />

    </LinearLayout>
</layout>