<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">


        <ImageView
            android:id="@+id/ivFollowingSuggestions"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:src="@mipmap/profile_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvUserSuggestionsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:text="Jhon Thpmas"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />

            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvUserSuggestionsFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:text="2_mutual_followers"
                android:textColor="@color/blackgrey"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSuggestionsFollow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/bg_yellow_soft_corner"
            android:onClick="onClick"
            android:text="@string/follow"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/btnSuggestionsCross"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:onClick="onClick"
            android:src="@mipmap/cross_icon" />

    </LinearLayout>
</layout>