<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
       android:id="@+id/llNotificationItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_NotificationUserImage"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:src="@mipmap/profile_icon3" />
        <com.yellowseed.customView.CustomRobotoBoldTextView
            android:id="@+id/tvUserImage"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_circle_blue"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_20ssp"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.yellowseed.customView.CustomRobotoRegularTextView2
            android:id="@+id/tv_NotificationData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/jhon_thomas"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />
            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="2 hrs"
                android:textColor="@color/black_edit"
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_NotificationPostImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:src="@mipmap/theme_one"
           />

    </LinearLayout>
      <!--  <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"/>-->
    </LinearLayout>

</layout>