<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_transparent"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp"
    android:weightSum="2.5">

    <ImageView
        android:id="@+id/ivAnonEnableUser"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center"
        android:src="@mipmap/profile_icon" />

    <com.yellowseed.customView.CustomRobotoRegularTextView
        android:id="@+id/tvAnonEnableUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_weight="1.5"
        android:padding="@dimen/_5sdp"
        android:text="Jhon Thomas"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnAnonEnableUser"
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/bg_yellow_soft_corner"
        android:text="@string/follow"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"

        />
</LinearLayout>
</layout>