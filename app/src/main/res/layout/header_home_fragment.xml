<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etWriteSomething"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_home_dark_story"
            android:focusable="false"
            android:gravity="top"
            android:hint="@string/writesomethinghere"
            android:inputType="none"
            android:lines="3"
            android:maxLines="15"
            android:overScrollMode="always"
            android:padding="@dimen/_10sdp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textSize="@dimen/_10sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">


            <LinearLayout
                android:id="@+id/llStory3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/ivStory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/story" />


                <com.yellowseed.customView.CustomRobotoRegularTextView
                    android:id="@+id/tvStory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/story"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/ivPost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/post_icon" />

                <com.yellowseed.customView.CustomRobotoRegularTextView
                    android:id="@+id/tvPostHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/post"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPoll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/ivPoll"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@mipmap/poll" />

                <com.yellowseed.customView.CustomRobotoRegularTextView
                    android:id="@+id/tvPollHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/poll"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGoLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/ivGoLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/video_ico" />


                <com.yellowseed.customView.CustomRobotoRegularTextView
                    android:id="@+id/tv_GoLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Live"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewHeaderHome"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/viewLineColor" />

        <LinearLayout
            android:id="@+id/llStory2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/storycolor"
            android:orientation="vertical"

            android:padding="@dimen/_4sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp">

                <com.yellowseed.customView.CustomRobotoBoldTextView
                    android:id="@+id/tvHomeStories"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="@string/stories"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/ivWatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:src="@mipmap/watch" />

                <com.yellowseed.customView.CustomRobotoBoldTextView
                    android:id="@+id/tvWatchAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="@string/watchall"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llMain2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llStoryHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"

                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_2">

                        <FrameLayout
                            android:id="@+id/flImage"
                            android:layout_width="@dimen/_53sdp"
                            android:layout_height="@dimen/_53sdp"
                            android:background="@mipmap/circle">

                            <ImageView
                                android:id="@+id/iv_UserStories"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/userprofile_icon" />

                            <com.yellowseed.customView.CustomRobotoBoldTextView
                                android:id="@+id/tvUserImage"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_circle_blue"
                                android:gravity="center"
                                android:textSize="@dimen/_24ssp"
                                android:visibility="gone" />
                        </FrameLayout>

                        <com.yellowseed.customView.CustomRobotoRegularTextView2
                            android:id="@+id/tv_UserStoriesName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_stories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/storycolor"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <View

            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewLineColor" />
    </LinearLayout>
</layout>