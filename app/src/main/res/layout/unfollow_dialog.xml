<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/llMain"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_margin="@dimen/_15sdp"
    android:padding="@dimen/_10sdp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/profile_icon"/>
    <com.yellowseed.customView.CustomRobotoRegularTextView2
        android:id="@+id/tvRemoveFollwer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/_18ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Remove Follower?"/>
    <com.yellowseed.customView.CustomRobotoRegularTextView2
        android:id="@+id/tvTextappWont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:textAlignment="center"
        android:text="@string/textapp_follower"/>

<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/grey_hin_color"/>
    <com.yellowseed.customView.CustomRobotoRegularTextView
        android:id="@+id/tvRemove"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_18ssp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Remove"/>

    <View
        android:id="@+id/viewCancel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/grey_hin_color"/>
    <com.yellowseed.customView.CustomRobotoRegularTextView
       android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_6sdp"
        android:text="Cancel"/>
</LinearLayout>
</layout>