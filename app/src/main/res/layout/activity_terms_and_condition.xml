<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:mContext=".activity.TermsAndConditionActivity">
    <include
        android:id="@+id/layoutTermsandCondtnActivity"
        layout="@layout/customtoolbar" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/viewLineColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yellowseed.customView.CustomRobotoRegularTextView2
                android:id="@+id/tv_TermsandCondtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.4"
                android:padding="@dimen/_10sdp"
                android:textAllCaps="false"
                android:text="@string/dummylongtext"
                android:textColor="@color/grey"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>