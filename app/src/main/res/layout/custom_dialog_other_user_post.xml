<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/bg_rounded_box_top_corner"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_2sdp"
                android:visibility="visible">


                <com.yellowseed.customView.CustomRobotoRegularTextView
                    android:id="@+id/tvShareFb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@mipmap/fb_icon_callout"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:visibility="visible"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="@string/shareonfacebook"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/viewLineColor" />

                <com.yellowseed.customView.CustomRobotoRegularTextView
                    android:id="@+id/tvSendToChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@mipmap/comment_icon_callout"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:visibility="visible"
                    android:text="Send to Chat"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/viewSendtoChat"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewLineColor" />

                <com.yellowseed.customView.CustomRobotoRegularTextView
                    android:id="@+id/tvReportUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@mipmap/flag_line"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:visibility="visible"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="@string/reportpostt"
                    android:textColor="@color/red" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_9sdp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/tools" />

        <View
            android:layout_width="@dimen/_13sdp"
            android:layout_height="10dp"
            android:background="@color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_5sdp"/>


    </FrameLayout>

</layout>