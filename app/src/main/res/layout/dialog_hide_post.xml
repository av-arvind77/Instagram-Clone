<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llTouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@drawable/bg_hide_post"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivTouch"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@mipmap/touchid"
            android:layout_gravity="center"
            />


    <com.yellowseed.customView.CustomRobotoBoldTextView
        android:id="@+id/tvTouchId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Touch ID"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <com.yellowseed.customView.CustomRobotoRegularTextView2
        android:id="@+id/tvEnableHiddenMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Hidden Mode"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@color/lightblack" />
    <com.yellowseed.customView.CustomRobotoBoldTextView
        android:id="@+id/tvEnterpasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:text="Enter Passcode"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightblack" />
    <com.yellowseed.customView.CustomRobotoBoldTextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:paddingStart="@dimen/_15sdp"
        android:textColor="@color/red"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"/>

</LinearLayout>
</layout>